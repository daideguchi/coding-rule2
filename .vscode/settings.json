{
  "cSpell.enabled": false,
  "cSpell.enableFiletypes": [],
  "cSpell.language": "en,ja",
  "cSpell.ignorePaths": [
    "**/*.mdc",
    "**/*.md",
    "CLAUDE.md",
    ".git/**",
    "node_modules/**"
  ],
  "cSpell.words": [
    "AI",
    "Claude",
    "Cursor",
    "mdc",
    "readme",
    "セットアップ",
    "開発",
    "支援",
    "ツール",
    "パターン",
    "システム",
    "組織",
    "プロジェクト"
  ],
  "spellright.language": ["en"],
  "spellright.documentTypes": ["plaintext"],
  "spellright.ignoreFiles": ["**/*.mdc", "**/*.md", "CLAUDE.md"],
  "editor.wordBasedSuggestions": "off",
  "editor.quickSuggestions": {
    "other": false,
    "comments": false,
    "strings": false
  },
  "files.watcherExclude": {},
  "files.associations": {
    "*.mdc": "markdown"
  },
  "tasks.autoDetect": "on",
  "cursor.rules.autoSync": true,
  "cursor.rules.sourcePath": "cursor-rules",
  "cursor.rules.targetPath": ".cursor/rules"
}
